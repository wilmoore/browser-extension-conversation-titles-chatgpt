{
  "name": "conversation-titles-chatgpt",
  "version": "1.1.2",
  "description": "A lightweight Chrome extension that displays and copies ChatGPT conversation titles",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.28",
    "@playwright/test": "^1.57.0",
    "@types/chrome": "^0.0.280",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^26.0.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "chrome-extension",
    "chatgpt",
    "conversation-titles"
  ],
  "author": "",
  "license": "MIT"
}
