{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.1.1",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "homepage_url": "https://savvyai.dev",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "clipboardWrite",
    "storage"
  ],
  "options_ui": {
    "page": "src/options/options.html",
    "open_in_tab": false
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "src/content/index.ts"
      ],
      "css": [
        "styles/content.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
